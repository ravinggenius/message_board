<h1>Posts</h1>

<%= link_to 'New Post', new_post_path, class: 'btn btn-default' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Published At</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= post.author.email %></td>
        <td><%= post.published_at.to_s(:short) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
